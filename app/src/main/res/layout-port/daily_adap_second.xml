<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/monthn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/low_padding">

            <TableRow android:layout_marginTop="@dimen/low_padding"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tstatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.4"
android:singleLine="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/txtfrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="0.4"

                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/txtto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="0.4"

                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/txtduration"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>



                <TextView
                    android:id="@+id/taddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:singleLine="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/lid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.8"
                    android:textStyle="bold"

android:visibility="gone"

                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/ttrip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.8"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:singleLine="true"
                    android:padding="2dp"
                    android:text="Add Trip No."
                    android:background="@drawable/remark_btn"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tcmdty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.8"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Property"
                    android:textSize="@dimen/rep_font_size"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tremark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.8"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:text="Add Remark"
                    android:background="@drawable/remark_btn"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/txt_vid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="0.4"
                    android:textStyle="bold"

                    android:singleLine="true"

                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/txt_vin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="0.6"
                    android:textStyle="bold"

                    android:singleLine="true"

                    android:textColor="@color/black"
                    />
                <ImageView
                    android:id="@+id/imgconnection"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.08"
                    android:src="@drawable/cellular_icon"
                    />
                <ImageView
                    android:id="@+id/imgactive"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="0.08"
                    android:src="@drawable/grey"
                    />
                <TextView
                    android:id="@+id/txt_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="0.2"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="@string/edit_font"
                    android:singleLine="true"
                    android:textColor="@color/orange"
                    />

            </TableRow>
        </TableLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue"></View>
</LinearLayout>