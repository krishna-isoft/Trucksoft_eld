<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:paddingTop="8dp">
    <ImageView
        android:id="@+id/imgmsg"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/imgmsgpng"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="2dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/fileurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
  <!--  <TextView
        android:id="@+id/txtOtherUser"
        android:text="John Doe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp" />-->

    <TextView
        android:id="@+id/message"
        android:text=""
        android:background="@drawable/left_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:elevation="5dp"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/timestamp"
        android:text="12:00 PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/chatview_iv_send_statusk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_alignRight="@id/timestamp"
        android:layout_below="@id/message"
        android:text="@string/tick_icon"
        android:textSize="24dp"
        android:visibility="invisible"
        android:textColor="@color/dblue"
        android:layout_marginBottom="15dp"
        android:paddingLeft="2dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>