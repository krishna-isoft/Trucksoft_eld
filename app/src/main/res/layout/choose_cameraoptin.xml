<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diaogbg"

    android:orientation="vertical" >



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/text_size"

        android:orientation="horizontal"
        android:background="@color/white">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:gravity="left|center"
            android:text="ADD PHOTO"
            android:textColor="@color/black"
            android:textSize="18dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/footer_color">
        </View>


    <LinearLayout
        android:id="@+id/lintimg"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/text_size"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:id="@+id/tk_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:drawableTop="@color/blue"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:text="@string/camera_font"
            android:layout_gravity="left|center"
            android:textColor="@color/lgray"
            android:textSize="@dimen/btn_height"
            android:layout_margin="5dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:gravity="left|center"
            android:text="Take a Picture"
            android:textColor="@color/black"
            android:textSize="18dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/footer_color">

    </View>
    <LinearLayout
        android:id="@+id/upimage"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/text_size"
        android:background="@color/white">

        <TextView
            android:id="@+id/tk_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:drawableTop="@color/blue"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:text="@string/galary_font"
            android:layout_gravity="left|center"
            android:textColor="@color/lgray"
            android:textSize="@dimen/btn_height"
            android:layout_margin="5dp"

            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:gravity="left|center"
            android:text="Choose from Gallery"
            android:textColor="@color/black"
            android:textSize="18dp"/>
    </LinearLayout>

</LinearLayout>