<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bgk"
   >
    <LinearLayout
        android:id="@+id/linkk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/buttonScand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/closefont"
            android:textSize="45sp"
            android:textColor="@color/companycolor"
            android:padding="10dp"
            />
    </LinearLayout>
    <ImageButton
        android:id="@+id/buttonScan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:contentDescription="Scan"
        android:layout_marginBottom="15dp"
        android:src="@drawable/scan_button_style" />


    <ListView
        android:id="@+id/scanListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonScan"
        android:layout_below="@+id/linkk"
        android:stackFromBottom="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:paddingRight="@dimen/activity_horizontal_margin"

        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"/>
</RelativeLayout>
