<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.isoft.trucksoft_elog.show_loc.Show_mylocation"
    >


    <fragment

        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="isoft.com.trucksoft_eld.MainActivity"/>
    <RelativeLayout
        android:id="@+id/add_driver_checklist_rl_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary" >

        <ImageView
            android:id="@+id/add_driver_checklist_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/add_driver_checklist_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/add_driver_checklist_iv_back"
            android:padding="5dp"
            android:text="MY VEHICLE LOCATION"
            android:textColor="#fff"
            android:textSize="17sp"
            />
    </RelativeLayout>
        <LinearLayout
            android:id="@+id/linvech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/taddrss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/blue"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="-1"
                android:shadowDy="-1"
                android:background="#FFFFFF"
                android:shadowRadius="1"
                android:layout_marginTop="60dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

</RelativeLayout>
