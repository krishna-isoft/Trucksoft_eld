<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@drawable/bg"
    >
    <RelativeLayout
        android:id="@+id/header_cover_imagez"
        android:layout_width="match_parent"
        android:background="@color/splgray"
        android:layout_height="60dp">


        <ImageView
            android:id="@+id/iv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:onClick="onClick"
            android:padding="13dp"
            android:src="@drawable/back_dashboard" />

        <ImageView
            android:id="@+id/tlogo"

            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:padding="8dp"

            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:src="@drawable/elogo" />
        <TextView
            android:id="@+id/txttread"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:layout_alignRight="@+id/tlogo"
            android:visibility="visible"

            android:text="@string/trade"
            android:textSize="16dp"

            android:textColor="@color/blue"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txjjjjhd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:layout_alignParentRight="true"

            android:visibility="visible"
            android:padding="16dp"
            android:text="@string/verz"
            android:layout_marginRight="40dp"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/header_cover_imagez"
        android:id="@+id/idlayxx"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/max_padding"
        android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/idlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/txtcompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:text="Company Name :"
            android:textColor="@color/white"></TextView>
        <TextView
            android:id="@+id/txtdotnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:text="DOT Number :"
            android:textColor="@color/white"></TextView>
        <TextView
            android:id="@+id/txtemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:text="E-mail :"
            android:textColor="@color/white"></TextView>
        <TextView
            android:id="@+id/txtstate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:text="State :"
            android:textColor="@color/white"></TextView>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/idlay2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/imgdriver"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/driverz"></ImageView>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
