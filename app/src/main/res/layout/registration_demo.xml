<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
>

    <RelativeLayout
        android:id="@+id/sdk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:padding="2dp" >

        <LinearLayout
            android:id="@+id/dashboard_centre_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="@dimen/medium_padding"
            android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/idlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="@dimen/max_margin"
            android:src="@drawable/elogo" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/companycolor"
            android:textStyle="bold|italic"
            android:text="New Registration"
            android:layout_marginTop="@dimen/max_margintop"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:weightSum="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:text="@string/lrid"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/txt_license"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="0.3"
                android:background="@drawable/field"
                android:padding="5dp"
                android:singleLine="true"
                android:inputType="textCapCharacters"
                android:text=""
                android:textColor="#000"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:weightSum="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:text="@string/fname"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/stname"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="0.3"
                android:background="@drawable/field"
                android:inputType="textCapCharacters"
                android:padding="5dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#000"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:weightSum="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:text="@string/lname"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/stlname"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="0.3"
                android:background="@drawable/field"
                android:inputType="textCapCharacters"
                android:padding="5dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:weightSum="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:text="@string/ph"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/stmob"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="0.3"
                android:background="@drawable/field"
                android:inputType="phone"
                android:padding="5dp"
                android:singleLine="true"
                android:text=""
                android:maxLines="16"
                android:textColor="#000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:weightSum="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:text="@string/email"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/stmail"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="0.3"
                android:background="@drawable/field"

                android:padding="5dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:weightSum="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:text="@string/cityy"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/tcity"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="0.3"
                android:background="@drawable/field"
                android:inputType="textCapCharacters"
                android:padding="5dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#000"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:text="@string/state"
                android:textColor="#000"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" >

                <ImageView
                    android:id="@+id/add_driver_checklist_iv_cancel_trailer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:onClick="onClick"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:visibility="gone"
                    android:paddingTop="5dp"
                    android:src="@drawable/clear_button2" />

                <TextView
                    android:id="@+id/add_state"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_toLeftOf="@+id/add_driver_checklist_iv_cancel_trailer"
                    android:background="@drawable/field"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/downarrow"
                    android:gravity="center"
                    android:padding="5dp"

                    android:singleLine="true"
                    android:text="Select State"
                    android:textColor="#000" />
            </RelativeLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/btnlow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/medium_padding" >











            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/submit_button_base"
                android:gravity="center"
                android:onClick="onClick"
                android:singleLine="true"
                android:text="Submit"
                android:textColor="#000"
                android:textColorHint="#c2c2c2"
                />


        </LinearLayout>
</LinearLayout>
            </LinearLayout>
            </ScrollView>
        </RelativeLayout>


</RelativeLayout>
