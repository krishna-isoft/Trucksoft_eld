<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/driver_list_rl_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary" >

        <ImageView
            android:id="@+id/driver_list_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/driver_list_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toRightOf="@+id/driver_list_iv_back"
            android:text="IFTA"
            android:textColor="#fff"
            android:textSize="18sp"
            />


    </RelativeLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/driver_list_rl_header">
    <LinearLayout
        android:id="@+id/l48z"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_padding"

        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="@dimen/medium_padding"
        android:orientation="horizontal"
        android:gravity="center" >
        <LinearLayout
            android:id="@+id/lin_first"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:visibility="visible"
            android:background="@drawable/blankbutton"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Quarter - 1"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/yellow"></TextView>
            <TextView
                android:id="@+id/txt_ffromdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="2022-10-10"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="to"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"></TextView>
            <TextView
                android:id="@+id/txt_ftodate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="2022-10-10"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"></TextView>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/lin_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:visibility="visible"
            android:background="@drawable/blankbutton"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Quarter - 2"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/yellow"></TextView>

            <TextView
                android:id="@+id/txt_sfromdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="2022-10-10"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="to"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"></TextView>
            <TextView
                android:id="@+id/txt_stodate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="2022-10-10"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"></TextView>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/l48z"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_padding"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="@dimen/medium_padding"
        android:orientation="horizontal"
        android:gravity="center" >
        <LinearLayout
            android:id="@+id/lin_third"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:visibility="visible"
            android:background="@drawable/blankbutton"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Quarter - 3"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/yellow"></TextView>

            <TextView
                android:id="@+id/txt_tfromdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="2022-10-10"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="to"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"></TextView>
            <TextView
                android:id="@+id/txt_ttodate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="2022-10-10"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"></TextView>

        </LinearLayout>



            <LinearLayout
                android:id="@+id/lin_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:visibility="visible"
                android:background="@drawable/blankbutton"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Quarter - 4"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/yellow"></TextView>

                <TextView
                    android:id="@+id/txt_fffromdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="2022-10-10"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/white"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="to"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"></TextView>
                <TextView
                    android:id="@+id/txt_fftodate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="2022-10-10"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/white"></TextView>

            </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dashboard_lower_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/topher"
        android:gravity="center"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/helpline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableLeft="@drawable/phone_s"
            android:text="@string/contactemail"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            />

    </LinearLayout>
</RelativeLayout>